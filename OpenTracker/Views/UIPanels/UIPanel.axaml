<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" x:Class="OpenTracker.Views.UIPanels.UIPanel">

  <UserControl.Resources>
    <SolidColorBrush x:Key="StandardBackground" Color="{DynamicResource LocationsPanelColor}" />
    <SolidColorBrush x:Key="AlternativeBackground" Color="{DynamicResource ItemsPanelColor}" />
  </UserControl.Resources>
  
  <Border x:Name="ControlBorder" Classes="ControlBorder" Margin="1">
    <DockPanel>
      
      <Border DockPanel.Dock="Top" Classes="UIPanelTitle">
        <DockPanel>
          <TextBlock x:Name="TitleText" DockPanel.Dock="Left" Classes="UIPanelTitleText" />
          <ContentControl x:Name="ModeSettings" />
        </DockPanel>
      </Border>
      
      <LayoutTransformControl x:Name="LayoutTransformControl">
        <LayoutTransformControl.LayoutTransform>
          <ScaleTransform />
        </LayoutTransformControl.LayoutTransform>
        
        <Border x:Name="BodyBorder" Classes="UIPanelBody">
          <ContentControl x:Name="Body" />
        </Border>
      </LayoutTransformControl>
      
    </DockPanel>
  </Border>
</UserControl>
