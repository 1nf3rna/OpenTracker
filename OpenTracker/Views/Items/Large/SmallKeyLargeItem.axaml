<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vc="clr-namespace:OpenTracker.ValueConverters;assembly=OpenTracker"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="OpenTracker.Views.Items.Large.SmallKeyLargeItem">

  <UserControl.Resources>
    <vc:BitmapValueConverter x:Key="BitmapValueConverter" />
  </UserControl.Resources>

  <Panel Classes="ItemControl" PointerReleased="OnItemClick" IsVisible="{Binding Visible}"
         IsHitTestVisible="{Binding Visible}">

    <Image Source="{Binding ImageSource, Converter={StaticResource BitmapValueConverter}}" />

    <Border Classes="LargeItemCount">
      <TextBlock Classes="LargeItemCount" Text="{Binding ImageCount}" />
    </Border>

  </Panel>

</UserControl>
