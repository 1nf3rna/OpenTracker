<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:view="clr-namespace:OpenTracker.Views.ColorSelect;assembly=OpenTracker"
             mc:Ignorable="d" x:Class="OpenTracker.Views.ColorSelect.ColorSelectControl">
  
  <StackPanel Orientation="Vertical">
    <Grid ColumnDefinitions="Auto * Auto">
      <ToggleButton x:Name="ColorPickerToggleButton" Classes="ColorSelect" />
      <TextBlock x:Name="Label" Classes="ColorSelectLabel" Grid.Column="2" />
    </Grid>
    <Border x:Name="ColorPickerBorder" Classes="ColorPicker">
      <view:ColorPickerControl x:Name="ColorPickerControl" />
    </Border>
  </StackPanel>
  
</UserControl>
