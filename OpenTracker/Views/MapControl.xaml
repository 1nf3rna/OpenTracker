<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vc="clr-namespace:OpenTracker.ValueConverters;assembly=OpenTracker"
             xmlns:views="clr-namespace:OpenTracker.Views;assembly=OpenTracker"
             mc:Ignorable="d"
             x:Class="OpenTracker.Views.MapControl">
	
	<UserControl.Resources>
		<vc:BitmapValueConverter x:Key="BitmapValueConverter" />
	</UserControl.Resources>

  <Border BorderBrush="{DynamicResource ThemeBorderLowBrush}" BorderThickness="3" Margin="{Binding Path=MapMargin,
			RelativeSource={RelativeSource AncestorType=views:MainWindow}}">
		<Panel>
			<Image Source="{Binding Path=ImageSource, Converter={StaticResource BitmapValueConverter}}"
				   Height="2007" Width="2007" />
    </Panel>
	</Border>

</UserControl>
