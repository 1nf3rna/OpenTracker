<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:i="clr-namespace:Avalonia.Xaml.Interactivity;assembly=Avalonia.Xaml.Interactivity"
             xmlns:ia="clr-namespace:Avalonia.Xaml.Interactions.Core;assembly=Avalonia.Xaml.Interactions"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="OpenTracker.Views.PinnedLocations.Sections.MarkingSectionIcon">
  <Panel Name="panel" IsVisible="{Binding Visible}">
    
    <i:Interaction.Behaviors>
      <ia:EventTriggerBehavior EventName="PointerReleased" SourceObject="{Binding #panel}">
        <ia:InvokeCommandAction Command="{Binding HandleClickCommand}" />
      </ia:EventTriggerBehavior>
    </i:Interaction.Behaviors>
    
    <ContentControl Content="{Binding Image}" Height="32" Width="32" />
    <ContentControl Content="{Binding MarkingSelect}" />
    
  </Panel>
</UserControl>
