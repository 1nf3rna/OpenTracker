<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:OpenTracker.ViewModels.Maps.Locations"
             xmlns:i="using:Avalonia.Xaml.Interactivity"
             xmlns:ia="using:Avalonia.Xaml.Interactions.Core"
             xmlns:iadd="using:Avalonia.Xaml.Interactions.DragAndDrop"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="OpenTracker.Views.Maps.Locations.EntranceMapLocation">
  
  <UserControl.Resources>
    <vm:EntranceDropHandler x:Key="EntranceDropHandler" />
  </UserControl.Resources>
  
  <DockPanel Name="dockPanel" IsVisible="{Binding Visible}">

    <i:Interaction.Behaviors>
      
      <iadd:ContextDragBehavior Context="{Binding}" />
      <iadd:ContextDropBehavior Context="{Binding MapLocation}"
                                Handler="{StaticResource EntranceDropHandler}" />
      
      <ia:EventTriggerBehavior EventName="PointerEnter" SourceObject="{Binding #dockPanel}">
        <ia:InvokeCommandAction Command="{Binding HandlePointerEnterCommand}" />
      </ia:EventTriggerBehavior>

      <ia:EventTriggerBehavior EventName="PointerLeave" SourceObject="{Binding #dockPanel}">
        <ia:InvokeCommandAction Command="{Binding HandlePointerLeaveCommand}" />
      </ia:EventTriggerBehavior>
      
    </i:Interaction.Behaviors>
    
    <ToolTip.Tip>
      <ContentControl Content="{Binding ToolTip}" />
    </ToolTip.Tip>

    <ContentControl DockPanel.Dock="{Binding MarkingDock}" Content="{Binding Marking}" />
      
    <Panel Name="panel">
      
      <i:Interaction.Behaviors>
      
        <ia:EventTriggerBehavior EventName="PointerReleased" SourceObject="{Binding #panel}">
          <ia:InvokeCommandAction Command="{Binding HandleClickCommand}" />
        </ia:EventTriggerBehavior>
      
        <ia:EventTriggerBehavior EventName="DoubleTapped" SourceObject="{Binding #panel}">
          <ia:InvokeCommandAction Command="{Binding HandleDoubleClickCommand}" />
        </ia:EventTriggerBehavior>
      
      </i:Interaction.Behaviors>
      
      <Polygon Points="{Binding Points}" Fill="{Binding Color}"
               Stroke="{Binding BorderColor}" StrokeThickness="5" />
      
    </Panel>

  </DockPanel>
  
</UserControl>
