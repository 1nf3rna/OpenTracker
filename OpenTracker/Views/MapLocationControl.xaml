<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="OpenTracker.Views.MapLocationControl">

  <Border Width="{Binding Path=Size}" Height="{Binding Path=Size}" BorderBrush="#212121"
          Background="{Binding Path=Color}" IsVisible="{Binding Path=Visible}" IsHitTestVisible="{Binding Path=Visible}"
          BorderThickness="{Binding Path=BorderSize}" PointerReleased="OnClick" />
  
</UserControl>
