<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" x:Class="OpenTracker.Views.AutoTracking.AutoTrackerLog">
  <DockPanel>

    <StackPanel DockPanel.Dock="Top">
      <StackPanel Margin="10" HorizontalAlignment="Center" Orientation="Horizontal">
        <TextBlock Classes="AutoTrackerLabel">Logging Level:</TextBlock>
        <ComboBox x:Name="LogLevelComboBox" Classes="AutoTrackerLogLevel" />
      </StackPanel>

      <ToggleButton x:Name="ShowLogToggleButton" Classes="AutoTracker" Content="Show Log" />
    </StackPanel>
    
    <StackPanel DockPanel.Dock="Bottom" Margin="10" Orientation="Horizontal" HorizontalAlignment="Center">
      <Button x:Name="ResetLogButton" Classes="AutoTracker" Content="Reset Log" />
      <Button x:Name="SaveLogButton" Classes="AutoTracker" Content="Save Log" />
    </StackPanel>

    <Border x:Name="LogBorder" Classes="AutoTrackerLog">
      <ScrollViewer>
        <TextBlock Classes="AutoTrackerLog" Margin="5 0" />
      </ScrollViewer>
    </Border>
    
  </DockPanel>
</UserControl>
