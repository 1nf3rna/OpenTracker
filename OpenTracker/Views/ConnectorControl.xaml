<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vc="clr-namespace:OpenTracker.ValueConverters;assembly=OpenTracker"
             xmlns:view="clr-namespace:OpenTracker.Views;assembly=OpenTracker"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="OpenTracker.Views.ConnectorControl">
  
  <UserControl.Resources>
    <vc:MapPointValueConverter x:Key="MapPointValueConverter" />
  </UserControl.Resources>
  
  <Line Classes="Connector" StartPoint="{Binding Path=Start, Converter={StaticResource
        MapPointValueConverter}}" EndPoint="{Binding Path=End, Converter={StaticResource
        MapPointValueConverter}}" PointerReleased="OnPointerReleased" Stroke="{Binding Path=Color}" 
        PointerEnter="OnPointerEnter" PointerLeave="OnPointerLeave" />
  
</UserControl>
